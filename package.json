    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "@xstyled/styled-components": "^1.1.1",
    "asyncro": "^3.0.0",
    "easy-peasy": "^2.3.3",
    "electron-is-dev": "^1.1.0",
    "minireset.css": "^0.0.4",
    "pica": "^5.0.0",
    "pretty-bytes": "^5.2.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-lottie": "^1.2.3",
    "react-scripts": "3.0.0",
