{
  "name": "image-resizer",
  "version": "1.2.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "author": {
    "name": "Anthony Yarbrough",
    "email": "asyarb@hawaii.edu",
    "url": "https://ayarbrough.com"
  },
  "scripts": {
    "develop": "concurrently \"yarn rescripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "rescripts build",
    "test": "rescripts test",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-build": "yarn build",
    "electron-build": "build --mac --win",
    "compile": "yarn electron-build",
    "prerelease": "yarn version --strict-semver",
    "release": "yarn electron-build -p always"
  },
  "build": {
    "afterSign": "scripts/notarize.js",
    "dmg": {
      "sign": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "asyarb",
        "repo": "ImageResizer"
      }
    ],
    "nsis": {
      "oneClick": true
    },
    "appId": "com.walltowall.image-resizer",
    "productName": "ImageResizer",
    "copyright": "Copyright Â© 2019 ${author}",
    "mac": {
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "@xstyled/styled-components": "^1.8.3",
    "asyncro": "^3.0.0",
    "easy-peasy": "^2.6.6",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^3.0.6",
    "electron-updater": "^4.1.2",
    "minireset.css": "^0.0.5",
    "pica": "^5.0.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-lottie": "^1.2.3",
    "react-scripts": "3.0.1",
    "react-spring": "^8.0.27",
    "styled-components": "^4.3.2"
  },
  "devDependencies": {
    "@rescripts/cli": "^0.0.10",
    "@rescripts/rescript-env": "^0.0.10",
    "babel-plugin-styled-components": "^1.10.6",
    "concurrently": "^4.1.1",
    "dotenv": "^8.0.0",
    "electron": "^5.0.6",
    "electron-builder": "^20.44.4",
    "electron-notarize": "^0.1.1",
    "prettier": "^1.18.2",
    "typescript": "^3.5.2",
    "wait-on": "^3.2.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version"
    ],
    "development": [
      "last 1 chrome version"
    ]
  }
}
