    "styled-components": "^4.3.1",
    "typeface-inter": "^3.5.0"
  },
  "devDependencies": {
    "@rescripts/cli": "^0.0.10",
    "@rescripts/rescript-env": "^0.0.10",
    "concurrently": "^4.1.0",
    "electron": "^5.0.0",
    "electron-builder": "^20.39.0",
    "typescript": "^3.4.5",
    "wait-on": "^3.2.0"
  },
  "scripts": {
    "develop-browser": "react-scripts start",
    "develop-electron": "concurrently \"yarn rescripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "rescripts build",
    "test": "rescripts test",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build",
    "electron-pack": "build -m"
